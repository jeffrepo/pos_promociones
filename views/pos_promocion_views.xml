  /> -->

    <menuitem
        id="menu_pos_promocion"
        name="Promociones"
        parent="point_of_sale.menu_point_root"
        sequence="135"/>

    <menuitem
        id="menu_pos_promocion_submenu"
        name="Promocion"
        parent="menu_pos_promocion"
        action="action_pos_promociones1"
        sequence="25"/>



  </data>
</odoo>
